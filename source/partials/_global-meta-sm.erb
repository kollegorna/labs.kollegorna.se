  <% if current_page.data.meta_title %>
  <meta name="title" content="<%= current_page.data.meta_title %>">
  <% elsif current_page.data.title %>
  <meta name="title" content="<%= current_page.data.title %>">
  <% else %>
  <meta name="title" content="Kollegorna Labs">
  <% end %>
  <meta name="decription" content="<%= current_page.data.meta_description || "We build stuff with Rails, Ember.js, Node.js and Go. This is our messy lab…" %>">

  <meta property="og:site_name" content="Kollegorna Labs">
  <% if current_page.data.author %>
  <meta property="og:type" content="article">
  <meta property="og:title" content="<%= current_page.data.title %>">
  <% elsif current_page.data.title %>
  <meta property="og:type" content="website">
  <meta property="og:title" content="<%= current_page.data.title %>">
  <% else %>
  <meta property="og:type" content="website">
  <meta property="og:title" content="Kollegorna Labs">
  <% end %>
  <meta property="og:url" content="<%= current_page.url %>">
  <meta property="og:description" content="<%= current_page.data.meta_description || "We build stuff with Rails, Ember.js, Node.js and Go. This is our messy lab…" %>">
  <meta property="og:image" content="<%= current_page.data.meta_image || image_path('og.jpg') %>">

  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@kollegorna">
  <meta name="twitter:creator" content="<%= current_page.data.twitter || "@kollegorna" %>">
  <% if current_page.data.meta_title %>
  <meta name="twitter:title" content="<%= current_page.data.meta_title %>">
  <% elsif current_page.data.title %>
  <meta name="twitter:title" content="<%= current_page.data.title %>">
  <% else %>
  <meta name="twitter:title" content="Kollegorna Labs">
  <% end %>
  <meta name="twitter:url" content="<%= current_page.url %>">
